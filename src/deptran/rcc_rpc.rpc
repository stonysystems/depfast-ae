abstract service MultiPaxos {

  defer Forward(MarshallDeputy cmd,
                uint64_t dep_id |
                uint64_t coro_id);

  defer Prepare(uint64_t slot,
                ballot_t ballot |
                ballot_t max_ballot,
                uint64_t coro_id);

  defer Accept(uint64_t slot,
               uint64_t time,
               ballot_t ballot,
               MarshallDeputy cmd |
               ballot_t max_ballot,
               uint64_t coro_id);

  defer Decide(uint64_t slot,
               ballot_t ballot,
               MarshallDeputy cmd);
	       
}

